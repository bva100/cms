{% extends 'CmsCoreBundle:App:base.html.twig' %}

{% block body %}
    <h1>{{ site.name | title }}'s Media</h1>
    {% block notices %}{{ parent() }}{% endblock %}
    <ul>
        {% for media in media  %}
            <li>
                <a href="{{ path('cms_core.media_read', {'id':media.id}) }}">{{ media.filename }}</a>
                <a href="{{ media.url }}">preview</a>
                <form action="{{ path('cms_core.media_delete') }}" method="post">
                    <input type="hidden" name="token" value="{{ token }}"/>
                    <input type="hidden" name="id" value="{{ media.id }}"/>
                    <input type="submit" value="x"/>
                </form>
            </li>
        {% endfor %}
    </ul>
    <section>
        <a href="{{ path('cms_core.media_new', {'siteId':site.id} ) }}">Add Media</a>
    </section>
    <nav>
        <a href="{{ path('cms_core.site_read', {'id':site.id}) }}">Back to Site</a>
    </nav>
{% endblock %}