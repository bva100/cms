{% extends 'CmsCoreBundle:App:base.html.twig' %}

{% block body %}
    <h1>Add Media</h1>
    {% block notices %}{{  parent() }}{% endblock %}
    <form action="{{ path('cms_core.media_create') }}" method="post" enctype="multipart/form-data">
        <input type="hidden" name="token" value="{{ token }}"/>
        <input type="hidden" name="siteId" value="{{ site.id }}"/>
        <input type="hidden" name="MAX_FILE_SIZE" value="10737418240" />
        <input type="file" name="media" size="60"/>
        <input type="submit" value="Add Media"/>
    </form>
{%  endblock %}