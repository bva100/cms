{% extends 'CmsCoreBundle:App:base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
        'flat-ui/calendar/jquery-ui-1.10.3.custom.min.css'
        '@CmsCoreBundle/Resources/public/css/contentType/read.css'
        filter='cssrewrite, ?yui_css' %}
        <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
        'flat-ui/js/bootstrap-select.js'
        'flat-ui/js/flatui-checkbox.js'
        'flat-ui/js/flatui-calendar.js'
        'flat-ui/js/jquery.tagsinput.js'
        '@CmsCoreBundle/Resources/public/js/checkboxList.js'
        '@CmsCoreBundle/Resources/public/js/contentType/read.js'
        filter='?yui_js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block title %}
    {{ contentType.name | title }}{{ parent() }}
{% endblock %}

{% block content %}
    {{ parent() }}
    <div class="row-fluid">
        <div class="span6" id='header'>
            <h1>{{ contentType.name|title }}</h1>
            <a href="{{ path('cms_core.node_new', {'siteId':site.id, 'contentTypeId':contentType.id}) }}" id="add-new"><i class="icon-plus-sign"></i> Add New</a>
        </div>
        <div class="span4 pull-right" id="search-container">
            <input type="search" id="search" class="span2 pull-right" placeholder="Search for {{ contentType.name | title }} "/>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span2">
            <select name="state" value="state" class="select-block span2">
                <option value="0">View All States</option>
                <option value="draft">Drafts</option>
                <option value="active">Published</option>
                <option value="scheduled">Scheduled</option>
            </select>
        </div>
        <div class="span2">
            <button class="btn btn-info span12 flatui-calendar">
                <span class="pull-left flatui-calendar-text">View All Dates</span>
                <span class="caret pull-right"></span>
            </button>
            <div class="row-fluid hide" id='flatui-calendar-input-container'>
                <div class="span12">
                    <label for="start-date" class="date-input-label">From:</label>
                    <input type="text" class="flatui-calendar-input-start date-input span12" id='start-date'/>
                    <label for="end-date" class="date-input-label">To:</label>
                    <input type="text" class="flatui-calendar-input-end date-input span12" id='end-date'/>
                    <div class="row-fluid" id="flatui-calendar-input-button-container">
                            <button class="btn span6" id="flatui-calendar-cancel-dates">clear</button>
                        <button class="btn btn-info span6" id='flatui-calendar-confirm-dates'>ok</button>
                    </div>
                 </div>
            </div>
        </div>
        <div class="span2">
            <button class="btn btn-info span12" id='category-opener'>
                <span class="pull-left" id='category-opener-text'>View Categories</span>
                <span class="caret pull-right"></span>
            </button>
            <div class="row-fluid hide" id="category-container">
                <div class="span12">
                    <label for="category-parent">Parent:</label>
                    <input type="text" class="span12" id="category-parent"/>
                    <label for="category-sub">Sub:</label>
                    <input type="text" class="span12" id="category-sub"/>
                    <div class="row-fluid" id="category-button-container">
                        <button class="btn span6" id="category-cancel">clear</button>
                        <button class="btn btn-info span6" id='category-confirm'>ok</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="span2">
            <button class="btn btn-info span12" id='tag-opener'>
                <span class="pull-left" id='tag-opener-text'>View All Tags</span>
                <span class="caret pull-right"></span>
            </button>
            <div class="row-fluid hide" id="tag-container">
                <div class="span12">
                    <label for="tags">Tags:</label>
                    <input type="text"  class="span12" name='tags' id="tags" />
                    <div class="row-fluid" id="tag-button-container">
                        <button class="btn span6" id="tag-cancel">clear</button>
                        <button class="btn btn-info span6" id='tag-confirm'>ok</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="span2">
            <button class="btn btn-info span12" id='author-opener'>
                <span class="pull-left" id='author-opener-text'>View All Authors</span>
                <span class="caret pull-right"></span>
            </button>
            <div class="row-fluid hide" id="author-container">
                <div class="span12">
                    <label for="author-first-name">First Name:</label>
                    <input type="text" class="span12" id="author-first-name"/>
                    <label for="author-last-name">Last Name:</label>
                    <input type="text" class="span12" id="author-last-name"/>
                    <div class="row-fluid" id="author-input-button-container">
                        <button class="btn span6" id="author-cancel">clear</button>
                        <button class="btn btn-info span6" id='author-confirm'>ok</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="span2">
            <button class="btn btn-info btn-block"><i class="icon-filter"></i> Filter</button>
        </div>
    </div>
    <hr>
    <div class="row-fluid">
        <div class="span4">
            <button class="btn btn-inverse btn-lower span3 btn-checkbox-action edit" data-action='edit'><i class="icon-edit"></i> Edit</button>
            <button class="btn btn-inverse btn-lower span3 btn-checkbox-action delete" data-action='delete'><i class="icon-trash"></i> Trash</button>
        </div>
        <div class="span4" id='notices'>
            {% block notices %}
                {{ parent() }}
            {% endblock %}
        </div>
        <div class="span4">
            <a href="{{ path('cms_core.contentType_read', {'siteId':site.id, 'id':contentType.id, 'page':page+1}) }}" class="btn btn-inverse btn-lower span3 pull-right pag-next" {% if nodes.count < 5 %}disabled='disabled'{% endif %}>Next <i class="icon-chevron-right"></i></a>
            <a href="{{ path('cms_core.contentType_read', {'siteId':site.id, 'id':contentType.id, 'page':page-1}) }}" class="btn btn-inverse btn-lower span3 pull-right pag-previous" {% if page <= 1 %}disabled='disabled'{% endif %}><i class="icon-chevron-left"></i> Prev</a>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>
                        <label class="checkbox master-checkbox" for="master-checkbox" id="master-checkbox-container" data-state='off'>
                            <input type="checkbox" data-toggle="checkbox" name="master-checkbox" id="selectall"/>
                        </label>
                    </th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Categories</th>
                    <th>Tags</th>
                    <th>Commments</th>
                    <th>Created</th>
                </tr>
                </thead>
                <tbody class="checkbox-container">
                {% for node in nodes  %}
                <tr id="tr-{{ node.id }}">
                    <td>
                        <label class="checkbox checkbox-td" for="checkbox-{{ node.id }}" data-id="{{ node.id }}">
                            <input type="checkbox" class="slave-checkbox selectedId" data-toggle="checkbox" name="content-checkbox" id="checkbox-{{ node.id }}"/>
                        </label>
                    </td>
                    <td>
                        <h4><a href="/{{ node.slug }}">{{ node.title|title }}</a></h4>
                        <p class='node-preview'>
                            {{ node.views['html']|striptags|truncate(203) }}
                            {% if node.views['html']|striptags|length > 203 %}
                                <a href="/{{ node.slug }}">read more</a>
                            {% endif %}
                        </p>
                    </td>
                    {% if node.author.name is defined %}
                        <td><a href="{{ node.author.url|default('#') }}">{{ node.author.name }}</a></td>
                    {% else %}
                        <td></td>
                    {% endif %}
                    <td>
                        {% for category in node.categories  %}
                            {{ category.parent }} - {{ cateogry.child|default() }}
                        {% endfor %}
                    </td>
                    <td>
                        {% for tag in node.tags  %}
                            {{ tag }}
                        {% endfor %}
                    </td>
                    <td>{{ comment|default()|length }}</td>
                    <td>{{  node.created }}</td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    {% if nodes.count > 5 %}
        <div class="row-fluid">
            <div class="span4">
                <button class="btn btn-inverse btn-lower span3 btn-checkbox-action edit" data-action='edit'><i class="icon-edit"></i> Edit</button>
                <button class="btn btn-inverse btn-lower span3 btn-checkbox-action delete" data-action='delete'><i class="icon-trash"></i> Trash</button>
            </div>
            <div class="span4 offset4">
                <a href="{{ path('cms_core.contentType_read', {'siteId':site.id, 'id':contentType.id, 'page':page+1}) }}" class="btn btn-inverse btn-lower span3 pull-right pag-next">Next <i class="icon-chevron-right"></i></a>
                <a href="{{ path('cms_core.contentType_read', {'siteId':site.id, 'id':contentType.id, 'page':page-1}) }}" class="btn btn-inverse btn-lower span3 pull-right pag-previous" {% if page <= 1 %}disabled='disabled'{% endif %}><i class="icon-chevron-left"></i> Prev</a>
            </div>
        </div>
    {% endif %}
    <input type="hidden" id="token" value="{{ token }}"/>
    <input type="hidden" id="baseRoot" value="{{ app.request.baseUrl }}"/>
{% endblock %}