{% extends 'CmsCoreBundle:App:base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
        '@CmsCoreBundle/Resources/public/css/contentType/read.css'
        filter='cssrewrite, ?yui_css' %}
        <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
        'flat-ui/js/bootstrap-select.js'
        'flat-ui/js/flatui-checkbox.js'
        '@CmsCoreBundle/Resources/public/js/checkboxList.js'
        '@CmsCoreBundle/Resources/public/js/contentType/read.js'
        filter='?yui_js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block title %}
    {{ contentType.name | title }}{{ parent() }}
{% endblock %}

{% block content %}
    {{ parent() }}
    <div class="row-fluid">
        <div class="span4" id='header'>
            <h1>{{ contentType.name |title }}s</h1>
            <a href="#" id="add-new"><i class="icon-plus-sign"></i> Add New</a>
        </div>
        <div class="span4 pull-right" id="search-container">
            <input type="search" id="search" class="span2 pull-right" placeholder="Search for {{ contentType.name | title }}"/>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span2">
            <select name="state" value="state" class="select-block span2">
                <option value="0">View All States</option>
                <option value="draft">Drafts</option>
                <option value="active">Published</option>
                <option value="scheduled">Scheduled</option>
            </select>
        </div>
        <div class="span2">
            <select name="month" value="month" class="select-block span2">
                <option value="0">Show All Dates</option>
            </select>
        </div>
        <div class="span2">
            <select name="category" value="category" class="select-block span2">
                <option value="0">View All Categories</option>
                {% for category in contentType.categories   %}
                    <option value="{{ category.parent }}">{{ category.parent }}</option>
                {% else %}
                    <option value="">None found</option>
                {% endfor %}
            </select>
        </div>
        <div class="span2">
            <select name="tag" value="tag" class="select-block span2">
                <option value="0">View All Tags</option>
                {% for tag in contentType.tags   %}
                    <option value="{{ category.tag }}">{{ category.tag }}</option>
                {% else %}
                    <option value="0">none found</option>
                {% endfor %}
            </select>
        </div>
        <div class="span2">
            <select name="author" value="author" class="select-block span2">
                <option value="0">View All Authors</option>
                {% for tag in contentType.tags   %}
                    <option value="{{ category.tag }}">{{ category.tag }}</option>
                {% else %}
                    <option value="0">none found</option>
                {% endfor %}
            </select>
        </div>
        <div class="span2">
            <button class="btn btn-info btn-block"><i class="icon-filter"></i> Filter</button>
        </div>
    </div>
    <hr>
    <div class="row-fluid">
        <div class="span4">
            <button class="btn btn-lower btn-content-action" id='edit' disabled><i class="icon-edit"></i> Edit</button>
            <button class="btn btn-lower btn-content-action" id='delete' disabled><i class="icon-trash"></i> Trash</button>
        </div>
        <div class="span4 offset4">
            <a href="{{ path('cms_core.contentType_read', {'siteId':site.id, 'id':contentType.id, 'page':page+1}) }}" class="btn btn-lower pull-right" id='pag-next'>Next <i class="icon-chevron-right"></i></a>
            <a href="{{ path('cms_core.contentType_read', {'siteId':site.id, 'id':contentType.id, 'page':page-1}) }}" class="btn btn-lower pull-right" id='pag-previous'><i class="icon-chevron-left"></i> Prev</a>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <table class="table">
                <thead>
                <tr>
                    <th>
                        <label class="checkbox master-checkbox" for="master-checkbox" id="master-checkbox-container" data-state='off'>
                            <input type="checkbox" data-toggle="checkbox" name="master-checkbox" id="master-checkbox"/>
                        </label>
                    </th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Categories</th>
                    <th>Tags</th>
                    <th>Commments</th>
                    <th>Created</th>
                </tr>
                </thead>
                <tbody>
                {% for node in nodes  %}
                <tr>
                    <td>
                        <label class="checkbox" for="checkbox-{{ node.id }}">
                            <input type="checkbox" class="slave-checkbox" data-toggle="checkbox" name="checkbox" id="checkbox-{{ node.id }}"/>
                        </label>
                    </td>
                    <td>{{ node.title|title }}</td>
                    {% if node.author.name is defined %}
                        <td><a href="{{ node.author.url|default('#') }}">{{ node.author.name }}</a></td>
                    {% else %}
                        <td></td>
                    {% endif %}
                    <td>
                        {% for category in node.categories  %}
                            {{ category.parent }} - {{ cateogry.child | default() }}
                        {% endfor %}
                    </td>
                    <td>
                        {% for tag in node.tags  %}
                            {{ tag }}
                        {% endfor %}
                    </td>
                    <td>{{ comment|default()|length }}</td>
                    <td>{{ node.created|date('m/d/y g:i a') }}</td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}



{% block bodyCopy %}
    <h1>{{ contentType.name | title }}</h1>

    <legend>data</legend>
    <li>
        <ul>
            formats:
            {% for format in contentType.formats  %}
                {{ format }}
            {% endfor %}
        </ul>
        <ul>slug prefix: {{ contentType.slugPrefix }}</ul>
    </li>

    <legend>Nodes:</legend>
    <ul>
        {% for node in nodes  %}
            <li>
                <a href="{{ app.request.baseUrl }}/{{ node.slug }}">{{ node.title | title }}</a>
            </l1>
        {% endfor %}
    </ul>

    <form action="{{ path('cms_core.contentType_delete') }}" method="post">
        <input type="hidden" name="token" value="{{ token }}"/>
        <input type="hidden" name="id" value="{{ contentType.id }}"/>
        <input type="hidden" name="siteId" value="{{ site.id }}"/>
        <input type="submit" value="Delete ContentType"/>
    </form>

    <h3>Create a node</h3>
    <a href="{{ path('cms_core.node_new', {'siteId' : site.id, 'contentTypeId' : contentType.id }) }}">add a new node</a>

    <nav>
        <a href="{{ path('cms_core.site_read', {'id':site.id}) }}">Back to Site</a>
    </nav>

{% endblock %}