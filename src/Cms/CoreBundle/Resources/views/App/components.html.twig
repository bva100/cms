    </div>
</nav>
{% endblock %}

{% block classicNavAdmin %}
<nav class="sidebar-nav hidden-phone">
    <ul class="nav nav-list">
        <li><a href="{{ path('cms_core.site_read', {'id':site.id}) }}"><i class="icon-home"></i> Dashboard</a></li>
        <li class="divider"></li>
        <li><a href="#"><i class="icon-pushpin"></i> Posts</a></li>
