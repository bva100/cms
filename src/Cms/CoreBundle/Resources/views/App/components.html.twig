            <li><a href="{{ path('cms_core.contentType_read', {'siteId':site.id, 'id':contentType.id}) }}"><i class="icon-pushpin"></i> {{ contentType.name | title }}</a></li>
        {% endfor %}
        <li><a href="#"><i class="icon-file-text"></i> Pages</a></li>
