{% extends 'CmsCoreBundle:App:base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
        '@CmsCoreBundle/Resources/public/css/template/menu.css'
        filter='cssrewrite, ?yui_css' %}
        <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="/dependencies/ace-builds-master/src-min-noconflict/ace.js" type="text/javascript" charset="utf-8"></script>
    {% javascripts
        '@CmsCoreBundle/Resources/public/js/template/aceEditor.js'
        '@CmsCoreBundle/Resources/public/js/template/includes.js'
        filter='?yui_js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block title %}
    Menus {{ site.name }} {{ parent() }}
{% endblock %}

{% block content %}
    {% block templateModal %}
        {{ parent() }}
    {% endblock %}
    <article>
        <section class="row-fluid">
            <div class="span6">
                <h1>Menus and Components</h1>
            </div>
        </section>
        <section class="row-fluid">
            <div class="span9">
                {% block notices %}
                    {{ parent() }}
                {% endblock %}
                <div id="error-container"></div>
                <form id="save-template-form" action="{{ path('cms_core.template_save') }}" method="POST">
                    <input type="hidden" name="token" id="input-token" value="{{ token }}"/>
                    <input type="hidden" name="type" id="input-template-type" value="menu"/>
                    <div id='input-code-content'>{{ code }}</div>
                    <div class="row-fluid">
                        <button class="btn btn-info span2 pull-right" style="position: relative; left: 4px;">Save</button>
                    </div>
                </form>
            </div>
            <div class="span3">
                <div class="holder holder-includes">
                    <h4 class="clearfix">
                        <b class="pull-left">Includes</b>
                        <span class="pull-right">
                            <a href="#edit" class="edit-includes-action edit-includes">edit</a> <span class="add-includes">|</span>
                            <a href="#add" class="add-includes">add</a>
                        </span>
                    </h4>
                    <b>Extends:</b>
                    <ul id="primary-extends-list">
                        <li class="included-item" data-include-type="extends" data-template-name="{{ extends }}">
                            <a href="#">{{ extends }}</a>
                        </li>
                    </ul>
                    <b>Uses:</b>
                    <ul id="primary-include-list">
                        {% for use in uses  %}
                            <li class="included-item" data-include-type="use" data-template-name="{{ use }}">
                                <a href="#">{{ use }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </section>
        {% block footer %}
            {{ parent() }}
        {% endblock %}
    </article>
    <input type="hidden" id="code-save-path" value="{{ path('cms_core.template_save') }}"/>
    <input type="hidden" id="site-id" value="{{ site.id }}"/>
    <input type="hidden" id="template-id" value="{{ template.id }}"/>
{% endblock %}
